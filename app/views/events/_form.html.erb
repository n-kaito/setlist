<%= form_for(@event, :html => {:class => "form_event"}) do |f| %>
  <%=hidden_field_tag('event_id', @event.id)%>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <div class="actions js-event-form">
    <%= f.text_field :open_at, :placeholder => '日付', :data => {:behaviour => 'datepicker'} %><br>
    <%= f.text_field :name, :placeholder => 'イベント名' %>
    <br>
    <p style="float:left;">
      <% if @place %>
        <%= @place.name %>
      <% else %>
        検索＆選択してください
      <% end %>
    </p>&nbsp;
    <%= link_to '#', class:'btn', id:'js-link-search-place-from-event', title:'検索ボックスを開きます' do %>
      <i class="icon-search" ></i>
    <% end %>
    <br>
    <%= f.hidden_field :place_id, :placeholder => '場所' %><br>
  
    <%= f.submit %>
  </div>
  </fieldset>
<% end %>

